{% extends 'base.html.twig' %}

{% block title %}Booking{% endblock %}

{% block body %}
    <h1>Booking</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ booking.id }}</td>
            </tr>
            <tr>
                <th>Start_date</th>
                <td>{{ booking.startDate ? booking.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>End_date</th>
                <td>{{ booking.endDate ? booking.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Total_price</th>
                <td>{{ booking.totalPrice }}</td>
            </tr>
        </tbody>
    </table>

    {% if 'ROLE_ADMIN' in app.user.roles %}
    <a href="{{ path('app_booking_index_all') }}">back to list</a>
    {% else %}
    <a href="{{ path('app_booking_index') }}">back to list</a>
    {% endif %}


    <a href="{{ path('app_booking_edit', {'id': booking.id}) }}">edit</a>

    {{ include('booking/_delete_form.html.twig') }}
{% endblock %}
